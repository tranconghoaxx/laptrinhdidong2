<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GiaoDien.MainHoaDon">



    <TextView
        style="@style/tieude"
        android:text="@string/thongtin1" />

    <EditText
        android:id="@+id/txtMa"
        style="@style/txt"
        android:hint="@string/ma1" />

    <EditText
        android:id="@+id/txtHoTen"
        style="@style/txt"
        android:hint="@string/hoTen1" />

    <EditText
        android:id="@+id/txtDiaChi"
        style="@style/txt"
        android:hint="@string/diachi1" />

    <TextView
        style="@style/tieude"
        android:text="@string/chucnang" />


    <LinearLayout style="@style/chucnang">

        <Button
            android:id="@+id/btnThem"
            style="@style/btn"
            android:background="@drawable/them"
            android:text="@string/them" />

        <Button
            android:id="@+id/btnxoa"
            style="@style/btn"
            android:background="@drawable/xoa"
            android:text="@string/xoa" />

        <Button
            android:id="@+id/btnsua"
            style="@style/btn"
            android:background="@drawable/sua"

            android:text="@string/sua" />

        <Button
            android:id="@+id/btnclean"
            style="@style/btn"
            android:background="@drawable/xoa"
            android:text="@string/clean" />


    </LinearLayout>

    <TextView
        style="@style/tieude"
        android:text="@string/ds1" />


</LinearLayout>